{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/dashboard/(sales)/customers/components/customerlist.jsx",
    "app/Redux/slice/assestSlice.jsx",
    "app/dashboard/(purchases)/merchants/component/MerchantList.jsx"
, "tailwind.config.ts", "app/(components)/Nav.tsx"  ],
  "exclude": ["node_modules"]
}
